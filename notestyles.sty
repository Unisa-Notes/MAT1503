\newcommand{\rulebookend}{\vbox{\hrule width \hsize \kern 1mm \hrule width \hsize height 2pt}%
	\cfoot{}}
\newcommand{\rulechapterend}{\noindent\rule{\textwidth}{0.4pt}%
	\cfoot{}
}

